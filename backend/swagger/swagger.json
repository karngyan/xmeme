{
    "swagger": "2.0",
    "info": {
        "title": "X Meme API",
        "description": "Submission for Crio Winter of Doing Stage 2B",
        "version": "1.0.0",
        "contact": {
            "email": "karngyan@gmail.com"
        },
        "license": {
            "name": "AGPLv3.0",
            "url": "https://www.gnu.org/licenses/gpl-3.0.en.html"
        }
    },
    "host": "api.xmeme.karngyan.com",
    "basePath": "/",
    "schemes": [
        "https"
    ],
    "paths": {
        "/memes/": {
            "get": {
                "tags": [
                    "memes"
                ],
                "description": "Get Latest 100 Memes (later can be paginated)",
                "operationId": "MemeController.GetAllMemes",
                "responses": {
                    "200": {
                        "description": "\"Retrieved all memes\"",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.Meme"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "post": {
                "tags": [
                    "memes"
                ],
                "description": "Create New XMeme",
                "operationId": "MemeController.CreateMeme",
                "parameters": [
                    {
                        "in": "query",
                        "name": "name",
                        "description": "name of the owner",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "url",
                        "description": "url of the meme",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "caption",
                        "description": "caption of the meme",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "\"Meme created successfully\"",
                        "schema": {
                            "$ref": "#/definitions/models.IResponse"
                        }
                    },
                    "406": {
                        "description": "Not Acceptable"
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/memes/{mid}": {
            "get": {
                "tags": [
                    "memes"
                ],
                "description": "Get Meme by Id",
                "operationId": "MemeController.GetMeme",
                "parameters": [
                    {
                        "in": "path",
                        "name": "mid",
                        "description": "the mid you want to get",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "\"Retrieved Meme from mid successfully\"",
                        "schema": {
                            "$ref": "#/definitions/models.Meme"
                        }
                    },
                    "404": {
                        "description": "Meme not found"
                    },
                    "406": {
                        "description": ":mid is empty"
                    }
                }
            }
        }
    },
    "definitions": {
        "models.IResponse": {
            "title": "IResponse",
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                }
            }
        },
        "models.Meme": {
            "title": "Meme",
            "type": "object",
            "properties": {
                "caption": {
                    "type": "string"
                },
                "created": {
                    "type": "integer",
                    "format": "int64"
                },
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                },
                "updated": {
                    "type": "integer",
                    "format": "int64"
                },
                "url": {
                    "type": "string"
                }
            }
        }
    }
}